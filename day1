#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
	int inp = 0;
	int i = 0;
	int sum = 0;

	printf("请输入一个数：");
	scanf("%d", &inp);
	
	for (i = 1; i <= inp; i++) {
		int j = 0;
		int ret = 1;
	
		for (j = 1; j <= i; j++) {
			ret *= j;
		}
		sum += ret;
	}
	printf("%d的阶乘和是：%d",inp,sum);
	return 0;
}
